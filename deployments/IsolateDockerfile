FROM ubuntu:22.04

# Basic apt pakcage manager setting and requirements
RUN apt-get update\
    && apt-get upgrade -y\
    && apt-get install -y wget gcc g++ git build-essential libcap-dev build-essential libsystemd-dev pkgconf \
    && mkdir isolate

# Install isolate
WORKDIR ./isolate
RUN git clone https://github.com/ioi/isolate.git .\
    && make isolate\
    && make install

EXPOSE 8080
